{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://ctcuff.github.io/ctcuff.github.io",
  "scripts": {
    "build": "vue-cli-service build",
    "lint": "eslint \"./src/**/*{.ts,.js,.vue}\"",
    "deploy": "yarn build && gh-pages -d dist -b master",
    "dev": "vue-cli-service serve --port 3000",
    "format": "yarn format:vue && yarn format:scss",
    "format:scss": "prettier --write \"./src/**/*.scss\"",
    "format:vue": "prettier --write \"./src/**/*{.ts,.js,.vue}\"",
    "precommit": "lint-staged",
    "prepare": "husky install"
  },
  "dependencies": {
    "core-js": "^3.18.2",
    "gsap": "^3.8.0",
    "vue": "^2.6.14",
    "vue-class-component": "^7.2.3",
    "vue-property-decorator": "^9.1.2",
    "vue-router": "^3.5.2"
  },
  "devDependencies": {
    "@types/gsap": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "@vue/cli-plugin-babel": "^4.5.13",
    "@vue/cli-plugin-eslint": "^4.5.13",
    "@vue/cli-plugin-typescript": "~4.5.0",
    "@vue/cli-service": "^4.5.13",
    "@vue/eslint-config-typescript": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "eslint": "7.32.0",
    "eslint-plugin-vue": "^7.19.1",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.2",
    "lint-staged": "^11.2.2",
    "prettier": "^2.4.1",
    "sass": "^1.44.0",
    "sass-loader": "7.2.0",
    "typescript": "~4.1.5",
    "vue-template-compiler": "^2.6.14"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*{.ts,.js,.vue}": [
      "yarn lint"
    ],
    "./src/**/*{.scss,.ts,.js,.vue}": [
      "yarn format"
    ]
  }
}
